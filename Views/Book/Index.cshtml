@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h1>Book List</h1>

<p>
    <a asp-action="Create" class="btn  btn-primary">Add New Book</a>
</p>
@if (Model.Count() != 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author.FullName)
                </th>
                <th>
                    Image
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author.FullName)
                    </td>
                    <td>
                        @if (item.ImageUrl != null)
                        {
                            <img src="~/uploads/@item.Id/@item.ImageUrl" style="width:64px;" class="img-thumbnail" />
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="text-center"> <h1>There are no Books</h1> </div>
}
